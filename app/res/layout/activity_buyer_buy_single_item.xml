<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.BuyerAllCategories.BuyerBuySingleItemActivity">

<!--    set the toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/purple_500"
        app:title="GrainsMart"
        app:titleTextColor="@color/white"
        android:elevation="4dp"
        android:theme="?attr/actionBarTheme"
        app:popupTheme="?attr/actionBarPopupTheme" />

<!--    set the content  -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/buyCardView"
            app:cardElevation="11dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Product Details"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/purple_500" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:id="@+id/grainImage"
                        android:src="@drawable/organic_jowar"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#FF000000"
                        android:layout_marginBottom="30dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/postedDate"
                            android:text="Date"
                            android:textColor="@color/black"
                            android:layout_toRightOf="@+id/grainImage"
                            android:layout_marginLeft="15dp"
                            android:paddingBottom="15dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/grainName"
                            android:text="Grain Name"
                            android:textColor="@color/black"
                            android:layout_below="@+id/postedDate"
                            android:layout_toRightOf="@+id/grainImage"
                            android:layout_marginLeft="15dp"
                            android:paddingBottom="15dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/grainVariety"
                            android:text="Grain Variety"
                            android:textColor="@color/black"
                            android:layout_below="@+id/grainName"
                            android:layout_toRightOf="@+id/grainImage"
                            android:layout_marginLeft="15dp"
                            android:paddingBottom="15dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/grainPrice"
                            android:text="Grain Price"
                            android:textColor="@color/black"
                            android:layout_below="@+id/grainVariety"
                            android:layout_toRightOf="@+id/grainImage"
                            android:layout_marginLeft="15dp"
                            android:paddingBottom="15dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/grainQuantity"
                            android:text="Grain Quantity"
                            android:textColor="@color/black"
                            android:layout_below="@+id/grainPrice"
                            android:layout_toRightOf="@+id/grainImage"
                            android:layout_marginLeft="15dp"
                            android:paddingBottom="15dp"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/grainLocation"
                            android:text="Grain Location"
                            android:textColor="@color/black"
                            android:drawableLeft="@drawable/baseline_location_on_24"
                            android:layout_below="@+id/grainQuantity"
                            android:layout_toRightOf="@+id/grainImage"
                            android:layout_marginLeft="15dp" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtSellerDetails"
                    android:text="Seller Details"
                    android:layout_below="@+id/grainLocation"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple_500"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="30dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="120dp"
                        android:id="@+id/sellerImage"
                        android:src="@drawable/profile_pic"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#FF000000"
                        android:layout_marginBottom="20dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/sellerName"
                            android:text="Seller Name"
                            android:textColor="@color/black"
                            android:layout_below="@+id/txtSellerDetails"
                            android:layout_toRightOf="@+id/sellerImage"
                            android:layout_marginLeft="15dp"
                            android:paddingBottom="15dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/sellerAddress"
                            android:text="Seller Address"
                            android:textColor="@color/black"
                            android:layout_below="@+id/sellerName"
                            android:layout_toRightOf="@+id/sellerImage"
                            android:layout_marginLeft="15dp"
                            android:paddingBottom="15dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/sellerMobileNo"
                            android:text="Mobile No."
                            android:textColor="@color/black"
                            android:layout_below="@+id/sellerAddress"
                            android:layout_toRightOf="@+id/sellerImage"
                            android:layout_marginLeft="15dp" />

                    </LinearLayout>

                </LinearLayout>

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/quantityEditText"
                    android:hint="Enter Grain Quantity You Want > 10Kg? "
                    android:inputType="number"
                    android:textSize="14sp"
                    android:padding="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Choose Payment Mode : "
                    android:textSize="18sp"
                    android:textColor="@color/purple_500"
                    android:padding="10dp"/>

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <RadioButton
                        android:id="@+id/cashOnDelivery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cash On Delivery"/>

                    <RadioButton
                        android:id="@+id/onlinePayment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Online Payment"/>

                </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/backBtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Back"
                        android:textSize="16sp"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:background="@color/purple_500"
                        android:padding="10dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/checkoutBtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="CheckOut Now"
                        android:textSize="16sp"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:padding="10dp"
                        android:background="@color/purple_500"
                        android:layout_marginLeft="8dp" />
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </ScrollView>

</LinearLayout>