<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.BuyerAllCategories.OnlinePaymentActivity">

    <!--    set the toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/purple_500"
        app:title="GrainsMart"
        app:titleTextColor="@color/white"
        android:elevation="4dp"
        android:theme="?attr/actionBarTheme"
        app:popupTheme="?attr/actionBarPopupTheme" />

        <!--    Set the content  -->

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="11dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Order Details"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple_500"
                    android:gravity="center"
                    android:padding="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtGrainName"
                        android:text="Grain Name : "
                        android:textSize="16sp"
                        android:paddingLeft="20dp"
                        android:paddingBottom="6dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/grainName"
                        android:text="Grain Name"
                        android:textColor="@color/purple_500"
                        android:paddingLeft="20dp"
                        android:paddingBottom="6dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtGrainVariety"
                        android:text="Grain Variety : "
                        android:textSize="16sp"
                        android:paddingLeft="20dp"
                        android:paddingBottom="6dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/grainVariety"
                        android:text="Grain Variety"
                        android:textColor="@color/purple_500"
                        android:paddingLeft="20dp"
                        android:paddingBottom="6dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtGrainQuantity"
                        android:text="Grain Quantity : "
                        android:textSize="16sp"
                        android:paddingLeft="20dp"
                        android:paddingBottom="6dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/grainQuantity"
                        android:text="Grain Quantity"
                        android:textColor="@color/purple_500"
                        android:paddingLeft="20dp"
                        android:paddingBottom="6dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtGrainPrice"
                        android:text="Grain Price : "
                        android:textSize="16sp"
                        android:paddingLeft="20dp"
                        android:paddingBottom="6dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/grainPrice"
                        android:text="Grain Price"
                        android:textColor="@color/purple_500"
                        android:paddingLeft="20dp"
                        android:paddingBottom="6dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtGrainTotalPrice"
                        android:text="Grain Total Price : "
                        android:textSize="16sp"
                        android:paddingLeft="20dp"
                        android:paddingBottom="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/grainTotalPrice"
                        android:text="Grain Total Price"
                        android:textColor="@color/purple_500"
                        android:paddingLeft="20dp"
                        android:paddingBottom="6dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtGrainSellerName"
                        android:text="Seller Name : "
                        android:textSize="16sp"
                        android:paddingLeft="20dp"
                        android:paddingBottom="6dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/grainSellerName"
                        android:text="Seller Name"
                        android:textColor="@color/purple_500"
                        android:paddingLeft="20dp"
                        android:paddingBottom="6dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtGrainSellerMobileNo"
                        android:text="Seller Mobile No. : "
                        android:textSize="16sp"
                        android:paddingLeft="20dp"
                        android:paddingBottom="6dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/grainSellerMobileNo"
                        android:text="Seller Mobile No."
                        android:textColor="@color/purple_500"
                        android:paddingLeft="20dp"
                        android:paddingBottom="6dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtCustomerName"
                        android:text="Customer Name : "
                        android:textSize="16sp"
                        android:paddingLeft="20dp"
                        android:paddingBottom="6dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/customerName"
                        android:text="Customer Name"
                        android:textColor="@color/purple_500"
                        android:paddingLeft="20dp"
                        android:paddingBottom="6dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtCustomerAddress"
                        android:text="Customer Address : "
                        android:textSize="16sp"
                        android:paddingLeft="20dp"
                        android:paddingBottom="6dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/customerAddress"
                        android:text="Customer Address"
                        android:textColor="@color/purple_500"
                        android:paddingLeft="20dp"
                        android:paddingBottom="6dp"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Payment Method : "
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:paddingLeft="30dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/upi"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="UPI"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:background="@color/purple_500"
                        android:padding="10dp"
                        android:layout_margin="16dp"/>

                    <TextView
                        android:id="@+id/qr"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="QR Code"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:background="@color/purple_500"
                        android:padding="10dp"
                        android:layout_margin="16dp"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/qrimg"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:contentDescription="Generated QR code"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/accept"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Done"
                        android:textColor="@color/white"
                        android:background="@color/purple_500"
                        android:layout_gravity="start"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:textColor="@color/white"
                        android:background="@color/purple_500"
                        android:layout_marginLeft="160dp"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

</LinearLayout>