<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.Dashboard.DashboardFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="11dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtTotalGrains"
                    android:text="Grains : "
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:padding="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/totalGrains"
                    android:text="Grains"
                    android:textSize="16sp"
                    android:textColor="@color/purple_500"
                    android:gravity="center"
                    android:padding="10dp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="11dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtTotalOrders"
                    android:text="Orders : "
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:padding="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/totalOrders"
                    android:text="Orders"
                    android:textSize="16sp"
                    android:textColor="@color/purple_500"
                    android:gravity="center"
                    android:padding="10dp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="11dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtTotalOrdersPending"
                    android:text="Pending Orders : "
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:padding="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/totalPendingOrders"
                    android:text="Orders"
                    android:textSize="16sp"
                    android:textColor="@color/purple_500"
                    android:gravity="center"
                    android:padding="10dp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="11dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtTotalCompleteOrders"
                    android:text="Complete Orders : "
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:padding="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/totalCompleteOrders"
                    android:text="Orders"
                    android:textSize="16sp"
                    android:textColor="@color/purple_500"
                    android:layout_marginLeft="40dp"
                    android:gravity="center"
                    android:padding="10dp"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pending Orders : "
                android:textSize="20sp"
                android:textColor="@color/purple_500"
                android:textStyle="bold"
                android:padding="20dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pendingOrdersRV" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Complete Orders : "
                android:textSize="20sp"
                android:textColor="@color/purple_500"
                android:textStyle="bold"
                android:padding="20dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/completeOrdersRV" />

        </LinearLayout>

    </ScrollView>


</FrameLayout>